{
    "name": "Sky_Dust_AI_Workshop",
    "dockerFile": ".gitpod.Dockerfile",
    "settings": { 
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
